{% extends 'FrontEtud.html.twig' %}
{% block title%} Liste des Evenements par Catégorie{% endblock %}

{% block body %}


<div style="margin-left:auto; margin-right: auto; margin-top: 200px" >
      {{ form_start(form) }}

    <div class="form-row align-items-end" >
        <div class="col">
            {{ form_row(form.Categorie) }}
        </div>

        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    <table border="2px"    class="table table-striped">

        <tr>



            {% if evenements %}

            <th>nom</th>
            <th>date_evenement</th>
            <th>responsable</th>
            <th>description</th>
            <th>nbr places</th>
            <th>Categorie</th>
            <th>Action</th>
            <th>Action</th>




        </tr>
        <tr {%for e in evenements%}>

            <td>{{e.nom_evenement}} </td>
            <td>{{e.date_evenement|date('Y-m-d')}} </td>
            <td>{{e.responsable}} </td>
            <td>{{e.description}} </td>
            <td>{{e.nbr_place}} </td>
            <td>{{e.categorie.Name}} </td>




            <td><a href="{{ path('update',{'id_evenement':e.id_evenement}) }}" class="btn btn-dark" >Update</a></td>

            <td><a href="{{ path('d',{'id_evenement':e.id_evenement}) }}" class="btn btn-danger" onclick="return confirm('Etes vous sûr de supprimer cet evènement?')";>Delete</a></td>





        </tr {%endfor%}}>



    </table>
</div>
      <div style="margin-left: 450px">
           <a href="evenement/Add"><button class="btn btn-primary"   >Organiser Un Evènement</button></a>
</div>
    </div>
{% else %}
    <p>Aucun Evènement</p>
  {% endif %}
{% endblock %}